% style for pages after the title, before main content
\newcommand{\startpreface}{
  \pagestyle{plain}
  \pagenumbering{roman}
  \setcounter{page}{2}
}

% style for main content
\newcommand{\startmain}{
  \pagestyle{plain}
  \pagenumbering{arabic}
  \setcounter{page}{1}
}

\titleformat{\chapter}{\bf\centering\normalsize}{\thechapter.}{1em}{}
\titleformat{\section}{\bf}{\thesection}{1em}{}
\titleformat{\subsection}{\normalsize\bf}{\thesubsection}{1em}{}
\titleformat{\subsubsection}{\normalsize\it}{\thesubsubsection}{1em}{}

